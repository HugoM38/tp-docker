<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Liste des Articles</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
        }
        article {
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #ccc;
        }
        .date-publication {
            font-size: 0.8em;
            color: #666;
        }
        /* Style supplémentaire pour le formulaire */
        form {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <h1>Liste des Articles</h1>

    <!-- Formulaire pour ajouter un nouvel article -->
    <form action="/add" method="POST">
        <input type="text" name="titre" placeholder="Titre de l'article" required>
        <textarea name="contenu" placeholder="Contenu de l'article" required></textarea>
        <input type="date" name="date_publication" required>
        <button type="submit">Ajouter l'article</button>
    </form>

    <% articles.forEach(function(article) { %>
        <article>
            <h2><%= article.titre %></h2>
            <div class="date-publication">Publié le: <%= article.date_publication.toISOString().split('T')[0] %></div>
            <p><%= article.contenu %></p>
        </article>
    <% }); %>
</body>
</html>
